  "Resources": {
    "vThunderVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Ref" : "CidrVPC"
        },
        "Tags" : [
          { "Key" : "Name", "Value" : {"Fn::Sub":"${AWS::StackName}-vpc" }},
          {"Key" : {
            "Ref" : "TagName"
          },
            "Value": {
              "Ref" : "TagValue"
            }
          }
        ]

      }
    },
    "MgmtSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "vThunderVPC"
        },
        "AvailabilityZone" :{ "Ref" : "Zone" },
        "CidrBlock": {
          "Ref" : "CidrMgmtSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub":"${AWS::StackName}-vpc-mgmt-sub1"}
          },
          {"Key" : {
            "Ref" : "TagName"
          },
            "Value": {
              "Ref" : "TagValue"
            }
          }
        ]
      }
    },
    "DataSubnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "vThunderVPC"
        },
